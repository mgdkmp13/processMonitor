<UserControl x:Class="processMonitor.Views.PerformanceChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:converters="clr-namespace:processMonitor.Converters">
    <UserControl.Resources>
        <converters:MonitoringButtonConverter x:Key="MonitoringButtonConverter"/>
        <converters:MonitoringColorConverter x:Key="MonitoringColorConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Real-Time Performance Monitor" 
                               FontSize="16" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding ProcessName, StringFormat='Process: {0}'}" 
                               FontSize="12" Foreground="#ecf0f1" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#e74c3c" Padding="10,5" Margin="5,0" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="Memory (MB)" FontSize="10" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentMemory, StringFormat='{}{0:F2}'}" 
                                       FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#3498db" Padding="10,5" Margin="5,0" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="CPU %" FontSize="10" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentCpu, StringFormat='{}{0:F1}'}" 
                                       FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Button Content="{Binding IsMonitoring, Converter={StaticResource MonitoringButtonConverter}}"
                            Command="{Binding ToggleMonitoringCommand}"
                            Padding="15,5" Margin="5,0"
                            Background="{Binding IsMonitoring, Converter={StaticResource MonitoringColorConverter}}"
                            Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Chart -->
        <Grid Grid.Row="1" Background="White">
            <lvc:CartesianChart Series="{Binding Series}"
                               XAxes="{Binding XAxes}"
                               YAxes="{Binding YAxes}"
                               TooltipPosition="Top"
                               Margin="10"/>
        </Grid>
    </Grid>
</UserControl>
