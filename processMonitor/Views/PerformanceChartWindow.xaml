<Window x:Class="processMonitor.Views.PerformanceChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:processMonitor.Views"
        xmlns:converters="clr-namespace:processMonitor.Converters"
        Title="Performance Chart" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:MonitoringButtonConverter x:Key="MonitoringButtonConverter"/>
        <converters:MonitoringColorConverter x:Key="MonitoringColorConverter"/>
    </Window.Resources>
    
    <Grid>
        <views:PerformanceChartView />
    </Grid>
</Window>
