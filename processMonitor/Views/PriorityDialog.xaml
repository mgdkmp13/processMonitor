<Window x:Class="processMonitor.Views.PriorityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:Diagnostics="clr-namespace:System.Diagnostics;assembly=System"
        Title="Change Process Priority" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <ObjectDataProvider x:Key="PriorityValues" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Diagnostics:ProcessPriorityClass"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select new priority:" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <ComboBox Grid.Row="1" x:Name="PriorityComboBox" 
                  ItemsSource="{Binding Source={StaticResource PriorityValues}}"
                  SelectedItem="{Binding SelectedPriority, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                  VerticalAlignment="Top" Padding="5"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OK_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
