<Window x:Class="processMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:processMonitor"
        xmlns:views="clr-namespace:processMonitor.Views"
        xmlns:converters="clr-namespace:processMonitor.Converters"
        mc:Ignorable="d"
        Title="Process Monitor" Height="700" Width="1100">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ToolBar Grid.Row="0" Padding="5">
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Padding="10,5" 
                    IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBoolConverter}}"/>
            <Separator/>
            <Button Content="Kill Process" Command="{Binding KillCommand}" 
                    CommandParameter="{Binding SelectedProcess}" Padding="10,5"/>
            <Button Content="Toggle Tracking" Command="{Binding ToggleTrackingCommand}" 
                    CommandParameter="{Binding SelectedProcess}" Padding="10,5"/>
            <Separator/>
            <Button Content="Show Monitored Processes" Command="{Binding ShowMonitoredWindowCommand}" 
                    Padding="10,5" Background="LightBlue"/>
            <Separator/>
            <TextBlock Text="Refreshing..." VerticalAlignment="Center" Margin="10,0" 
                       Foreground="Blue" FontWeight="Bold"
                       Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisConverter}}"/>
        </ToolBar>
        
        <Expander Grid.Row="1" Header="Settings" Margin="5">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Filter by name:" 
                               VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" Padding="5"/>
                    
                    <CheckBox Grid.Row="1" Grid.Column="0" Content="Auto Refresh (OFF by default)" 
                              IsChecked="{Binding IsAutoRefreshEnabled}" 
                              VerticalAlignment="Center" Margin="5"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Interval (ms):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding RefreshInterval, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="80" Padding="5"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Sampling Interval (ms):" 
                               VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SamplingInterval, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" Padding="5"/>
                </Grid>
            </StackPanel>
        </Expander>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- MASTER -->
            <views:ProccessListView Grid.Column="0"/>

            <!-- DETAIL -->
            <Grid Grid.Column="1">
                <TextBlock Text="Select a process to see details" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="16" Foreground="Gray">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedProcess}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <views:ProcessDetailsView DataContext="{Binding SelectedProcess}">
                    <views:ProcessDetailsView.Style>
                        <Style TargetType="views:ProcessDetailsView">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </views:ProcessDetailsView.Style>
                </views:ProcessDetailsView>
            </Grid>
        </Grid>
        
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Processes: "/>
                    <Run Text="{Binding Processes.Count, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Tracked: "/>
                    <Run Text="{Binding MonitoredProcesses.Count, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Auto-Refresh: "/>
                    <Run Text="{Binding IsAutoRefreshEnabled, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>
