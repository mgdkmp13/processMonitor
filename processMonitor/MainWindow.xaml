<Window x:Class="processMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:processMonitor"
        xmlns:views="clr-namespace:processMonitor.Views"
        xmlns:converters="clr-namespace:processMonitor.Converters"
        mc:Ignorable="d"
        Title="Process Monitor" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5865F2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4752C4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3C45A5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#B0B0B0"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#ED4245"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C93538"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#57F287"/>
            <Setter Property="Foreground" Value="#2C2F33"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3FD970"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InfoButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#00B0F4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0099D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#5865F2" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Process Monitor" 
                                   FontSize="36" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#4752C4" Padding="12,8" Margin="0,0,10,0" CornerRadius="8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="Processes" FontSize="10" Foreground="#E0E0E0"/>
                                <TextBlock Text="{Binding Processes.Count, Mode=OneWay}" 
                                           FontSize="18" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#4752C4" Padding="12,8" CornerRadius="8">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="Tracked" FontSize="10" Foreground="#E0E0E0"/>
                                <TextBlock Text="{Binding MonitoredProcesses.Count, Mode=OneWay}" 
                                           FontSize="18" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" Padding="15,10" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Refresh" 
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBoolConverter}}"
                            Margin="0,0,10,0"/>

                    <Button Content="Kill Process" 
                            Command="{Binding KillCommand}" 
                            CommandParameter="{Binding SelectedProcess}"
                            Style="{StaticResource DangerButtonStyle}"
                            Margin="0,0,10,0"/>

                    <Button Content="Toggle Tracking" 
                            Command="{Binding ToggleTrackingCommand}" 
                            CommandParameter="{Binding SelectedProcess}"
                            Style="{StaticResource SuccessButtonStyle}"
                            Margin="0,0,10,0"/>

                    <Button Content="Monitored Processes" 
                            Command="{Binding ShowMonitoredWindowCommand}"
                            Style="{StaticResource InfoButtonStyle}"
                            Margin="0,0,10,0"/>

                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="2" 
                            Padding="10,5" CornerRadius="6" Margin="10,0,0,0"
                            Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Refreshing..." 
                                       VerticalAlignment="Center"
                                       Foreground="#1565C0" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#EFF6FF" Padding="10,5" CornerRadius="6" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="200"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="13">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="Search..." 
                                       Foreground="#9CA3AF" 
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding FilterText}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#FAFBFC" Padding="15,8" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <CheckBox IsChecked="{Binding IsAutoRefreshEnabled}" 
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    <TextBlock Text="Auto Refresh" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="13"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Interval:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="12"/>
                    <TextBox Text="{Binding RefreshInterval, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" 
                             Padding="5,2"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             FontSize="12"
                             VerticalContentAlignment="Center"/>
                    <TextBlock Text="ms" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="12" Foreground="#6B7280"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Sampling:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="12"/>
                    <TextBox Text="{Binding SamplingInterval, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60"
                             Padding="5,2"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             FontSize="12"
                             VerticalContentAlignment="Center"/>
                    <TextBlock Text="ms" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="12" Foreground="#6B7280"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="0"
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#00000015" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <views:ProccessListView Margin="0,0,-134,0" Loaded="ProccessListView_Loaded"/>
            </Border>

            <GridSplitter Grid.Column="1" 
                          Width="8" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ShowsPreview="True"/>

            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="12"
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" Margin="131,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#00000015" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                </Border.Effect>

                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedProcess}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="Select a process to see details" 
                                   FontSize="18" 
                                   Foreground="#9CA3AF"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                        <TextBlock Text="Click on any process from the list" 
                                   FontSize="13" 
                                   Foreground="#D1D5DB"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <views:ProcessDetailsView DataContext="{Binding SelectedProcess}">
                        <views:ProcessDetailsView.Style>
                            <Style TargetType="views:ProcessDetailsView">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </views:ProcessDetailsView.Style>
                    </views:ProcessDetailsView>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="4" Background="#2C3E50" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#34495E" Padding="8,4" CornerRadius="4" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total: " Foreground="#BDC3C7" FontSize="12"/>
                            <TextBlock Text="{Binding Processes.Count, Mode=OneWay}" 
                                       Foreground="White" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#34495E" Padding="8,4" CornerRadius="4" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tracked: " Foreground="#BDC3C7" FontSize="12"/>
                            <TextBlock Text="{Binding MonitoredProcesses.Count, Mode=OneWay}" 
                                       Foreground="#57F287" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#34495E" Padding="8,4" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Auto-Refresh: " Foreground="#BDC3C7" FontSize="12"/>
                            <TextBlock Text="{Binding IsAutoRefreshEnabled, Mode=OneWay}" 
                                       FontWeight="Bold" FontSize="12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#57F287"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAutoRefreshEnabled}" Value="False">
                                                <Setter Property="Foreground" Value="#ED4245"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                           Text="Process Monitor" 
                           Foreground="#95A5A6" 
                           FontSize="11"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>